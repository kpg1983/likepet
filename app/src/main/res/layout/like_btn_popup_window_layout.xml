<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btn_like_1"
        android:layout_width="@dimen/sub_profile_image_size"
        android:layout_height="@dimen/sub_profile_image_size"
        android:background="@drawable/view_btn_emoticon_01"
        android:layout_marginRight="@dimen/emotion_icon_margin"
        />

    <ImageButton
        android:id="@+id/btn_like_2"
        android:layout_width="@dimen/sub_profile_image_size"
        android:layout_height="@dimen/sub_profile_image_size"
        android:layout_toRightOf="@id/btn_like_1"
        android:background="@drawable/view_btn_emoticon_02"
        android:layout_marginRight="@dimen/emotion_icon_margin"
        />

    <ImageButton
        android:id="@+id/btn_like_3"
        android:layout_width="@dimen/sub_profile_image_size"
        android:layout_height="@dimen/sub_profile_image_size"
        android:layout_toRightOf="@id/btn_like_2"
        android:background="@drawable/view_btn_emoticon_03"
        android:layout_marginRight="@dimen/emotion_icon_margin"
        />

    <ImageButton
        android:id="@+id/btn_like_4"
        android:layout_width="@dimen/sub_profile_image_size"
        android:layout_height="@dimen/sub_profile_image_size"
        android:layout_toRightOf="@id/btn_like_3"
        android:background="@drawable/view_btn_emoticon_04"
        android:layout_marginRight="@dimen/emotion_icon_margin"
        />

</RelativeLayout>