<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >


    <ImageView
        android:id="@+id/alarm_img_userProfile"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="7.67dp"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/alarm_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/alarm_img_userProfile"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/alarm_txt_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="유지현"
            />

        <RelativeLayout
            android:id="@+id/alarm_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_txt_contents"
            >

            <ImageView
                android:id="@+id/alarm_point_1"
                android:layout_width="2.33dp"
                android:layout_height="2.33dp"
                android:src="@drawable/view_img_04"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                />

            <TextView
                android:id="@+id/alarm_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/alarm_point_1"
                android:textColor="#a0a0a0"
                android:textSize="9.33dp"
                android:text="5분전"
                />

        </RelativeLayout>

    </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>