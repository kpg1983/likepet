<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/notice_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/notice_title"
            android:layout_width="match_parent"
            android:layout_height="55.66dp"
            android:background="#ffffff"
            >
            <TextView
                android:id="@+id/notice_txt_title"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.33dp"
                android:textSize="13.5dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/notice_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015/11/01"
                android:textSize="7.3dp"
                android:textColor="#78acca"
                android:layout_below="@id/notice_txt_title"
                android:layout_alignRight="@id/notice_txt_title"
                />

            <ImageButton
                android:id="@+id/notice_btn"
                android:layout_width="46dp"
                android:layout_height="55.66dp"
                android:src="@drawable/more_btn_05_02"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:background="#cbcbcb"
                android:layout_alignParentBottom="true"
                >

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/notice_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:layout_below="@id/notice_title"
            android:visibility="gone"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.33dp"
                android:layout_marginRight="16.33dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="12dp"
                >

                <ImageView
                    android:id="@+id/notice_img_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/notice_txt_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:background="#cbcbcb"
                android:layout_alignParentBottom="true"
                >

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>