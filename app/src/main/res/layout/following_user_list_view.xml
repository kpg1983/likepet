<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67.99dp"
        android:layout_marginLeft="19.66dp"
        android:layout_marginRight="19.66dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            >

            <RelativeLayout
                android:id="@+id/following_user_img_container"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/following_user_img_profile"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    />

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/feed_img_profileline"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/following_user_name_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/following_user_img_container"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                >

                <ImageView
                    android:id="@+id/following_img_clan"
                    android:layout_width="18dp"
                    android:layout_height="14dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    />

                <TextView
                    android:id="@+id/following_user_txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/following_img_clan"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/following_user_img_add"
            android:layout_width="25.66dp"
            android:layout_height="25.66dp"
            android:src="@drawable/view_img_like_plus"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="@null"
            />

    </RelativeLayout>


</RelativeLayout>