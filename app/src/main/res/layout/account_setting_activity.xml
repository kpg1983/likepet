<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ececec"
    >

    <RelativeLayout
        android:id="@+id/account_setting_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/account_title"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="16.33dp"
            />

        <RelativeLayout
            android:id="@+id/account_setting_cancel_container"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true">

            <ImageButton
                android:id="@+id/account_setting_btn_cancel"
                android:layout_width="12dp"
                android:layout_height="12.33dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16.33dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/more_btn_02_cancel"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            >

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/account_setting_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_below="@id/account_setting_menu_bar"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.33dp"
            android:layout_marginRight="20.66dp"
            >

            <RelativeLayout
                android:id="@+id/account_setting_email_container"
                android:layout_width="match_parent"
                android:layout_height="90dp"

                >
                <TextView
                    android:id="@+id/account_setting_txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25.66dp"
                    android:layout_marginBottom="17.66dp"
                    android:text="@string/account_txt_registry_email"
                    android:textColor="#494949"
                    android:textSize="12.13dp"

                    />
                <TextView
                    android:id="@+id/account_setting_edit_email"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#494949"
                    android:singleLine="true"
                    android:layout_below="@id/account_setting_txt_email"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="11.33dp"
                    />

                <ImageButton
                    android:id="@+id/account_setting_btn_email"
                    android:layout_width="29.66dp"
                    android:layout_height="29.66dp"
                    android:src="@drawable/more_btn_04_write"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="4.33dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.33dp"
                    android:background="#f7c243"
                    android:layout_alignParentBottom="true"
                    >


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_setting_password_container"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/account_setting_email_container"

                >
                <TextView
                    android:id="@+id/account_setting_txt_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25.66dp"
                    android:layout_marginBottom="17.66dp"
                    android:text=" "
                    android:textColor="#494949"
                    android:textSize="12.13dp"

                    />
                <TextView
                    android:id="@+id/account_setting_edit_password"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#494949"
                    android:text="@string/account_txt_modify_password"
                    android:singleLine="true"
                    android:layout_below="@id/account_setting_txt_password"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="11.33dp"
                    />

                <ImageButton
                    android:id="@+id/account_setting_btn_password"
                    android:layout_width="29.66dp"
                    android:layout_height="29.66dp"
                    android:src="@drawable/more_btn_04_write"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="4.33dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.33dp"
                    android:background="#f7c243"
                    android:layout_alignParentBottom="true"
                    >

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_social_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_setting_password_container"
                >

                <TextView
                    android:id="@+id/account_setting_txt_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_txt_linkage"
                    android:textSize="12.33dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="16.33dp"
                    android:textColor="#494949"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/account_setting_txt_social"
                    android:layout_marginBottom="29.66dp"
                    >

                    <ImageButton
                        android:id="@+id/account_setting_btn_facebook"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/more_img_06_05_d"
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:layout_marginRight="23.33dp"
                        />

                    <ImageButton
                        android:id="@+id/account_setting_btn_twitter"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/more_img_06_06_d"
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:layout_marginRight="23.33dp"
                        />

                    <ImageButton
                        android:id="@+id/account_setting_btn_google"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/more_img_06_07_d"
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:layout_marginRight="23.33dp"
                        />


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/account_btn_logout"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:text="@string/account_btn_logout"
        android:background="#f7c243"
        android:layout_below="@id/account_setting_container"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>