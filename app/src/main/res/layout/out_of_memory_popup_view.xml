<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="207.9dp"
        android:layout_height="123.99dp"
        android:background="#ffffff"
        >

        <RelativeLayout
            android:id="@+id/out_of_memory_txt_container"
            android:layout_width="match_parent"
            android:layout_height="82.66dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="헉, 메모리가~"
                android:textSize="16dp"
                android:textColor="#444444"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/out_of_memory_ok_container"
            android:layout_width="match_parent"
            android:layout_height="41.33dp"
            android:layout_below="@id/out_of_memory_txt_container"
            android:background="#f7c243"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="OK"
                android:textSize="16dp"
                />

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>