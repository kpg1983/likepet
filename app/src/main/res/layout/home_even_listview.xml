<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/home_1_1_container_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/home_1_1_left_container"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:clickable="true"
            >

            <ImageView
                android:id="@+id/home_img_left_contents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/home_txt_1_1_left_first_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_rectangle_black_background_color"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:includeFontPadding="false"
                />

            <TextView
                android:id="@+id/home_txt_1_1_left_second_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/home_txt_1_1_left_first_tag"
                android:background="@drawable/rounded_rectangle_black_background_color"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:includeFontPadding="false"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/home_1_1_right_container"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_toRightOf="@id/home_1_1_left_container"
            android:clickable="true"
            >

            <ImageView
                android:id="@+id/home_img_right_contents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"

                />

            <TextView
                android:id="@+id/home_txt_1_1_right_first_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_rectangle_black_background_color"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:includeFontPadding="false"
                />

            <TextView
                android:id="@+id/home_txt_1_1_right_second_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/home_txt_1_1_right_first_tag"
                android:background="@drawable/rounded_rectangle_black_background_color"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:includeFontPadding="false"
                />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>