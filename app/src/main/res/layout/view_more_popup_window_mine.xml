<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_popup_more"
        android:layout_width="81.33dp"
        android:layout_height="80.99dp"
        android:src="@drawable/view_more_box"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:id="@+id/view_delete_container"
        android:layout_width="wrap_content"
        android:layout_height="37.33dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6.33dp"
        android:clickable="true"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="37.33dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/view_img_delete"
                android:layout_width="9dp"
                android:layout_height="12.33dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:src="@drawable/view_more_icon_03" />

            <TextView
                android:id="@+id/view_txt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/view_img_delete"
                android:text="@string/view_more_delete"
                android:textColor="#444444"
                android:textSize="14dp" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_popup_divider_1"
        android:layout_width="81.33dp"
        android:layout_height="0.33dp"
        android:background="#cbcbcb"
        android:layout_below="@id/view_delete_container"

        >

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_modify_container"
        android:layout_width="wrap_content"
        android:layout_height="37.33dp"
        android:layout_below="@id/view_popup_divider_1"
        android:layout_centerHorizontal="true"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/view_img_modify"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="6.67dp"
                android:src="@drawable/view_more_icon_02" />

            <TextView
                android:id="@+id/view_txt_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/view_img_modify"
                android:text="@string/view_more_modify"
                android:textColor="#444444"
                android:textSize="14dp" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>